extends ../layout

block content
  div(class="uk-width-1-4@m uk-width-1-3@s uk-width-5-6 uk-position-center")
    .uk-card.uk-card-default.uk-card-hover.uk-card-body

      if message
        div(class="uk-alert-danger" uk-alert)
          a(class="uk-alert-close" uk-close)
          p #{message}

      h3.uk-card-title Iniciar sesión
      <!-- p Lorem ipsum dolor sit amet, consectetur adipisicing elit. -->
      form(action="/auth/login" method="POST")
        fieldset.uk-fieldset
          div(class='uk-grid-collapse' uk-grid)
            div(class='uk-width-1-2@s')
              input(type="text" class="uk-input uk-form-blank" placeholder="Nombre de usuario" name="user" required)
            div(class='uk-width-1-2@s')
              input(class="uk-input uk-form-blank" name="pass" type="password" placeholder="Contraseña" required)
            .uk-width-1-1.uk-margin
              button(class="uk-button uk-button-primary uk-width-1-1" type="submit") Iniciar sesión
